<Window x:Class="ProjetClient.Views.rule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetClient"
        mc:Ignorable="d"
        Title="rule" Height="1000" Width="800" Background="#FF404040">
    <Grid>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtRules" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="850" Width="780" Foreground="White"/>
        <Button x:Name="btnReturnRule" Content="Retour" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="30" Width="150" Background="#FFDDDDDD"/>
        <Image HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="150"  Grid.Row="1" Source="/dé.png" Stretch="Fill"/>
        <Image HorizontalAlignment="Right" Height="100" VerticalAlignment="Top" Width="150"  Grid.Row="1" Source="/dé.png" Stretch="Fill"/>
    </Grid>
</Window>
